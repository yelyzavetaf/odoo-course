<odoo>
    <record id="hr_hospital_doctor_visit_paperformat" model="report.paperformat">
        <field name="name">A4 doctor report</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">20</field>
        <field name="dpi">180</field>
    </record>

    <record id="action_report_doctor_card" model="ir.actions.report">
        <field name="name">Doctor visits report</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hr_hospital.report_doctor_card_template</field>
        <field name="report_file">hr_hospital.report_doctor_card_template</field>
        <field name="print_report_name">'Report - %s' % (object.display_name)</field>
        <field name="binding_model_id" ref="model_hr_hospital_doctor"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="hr_hospital.hr_hospital_doctor_visit_paperformat"/>
    </record>

    <template id="report_doctor_card_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="header" style="border-bottom: 2px solid black; margin-bottom: 25px;">
                        <div class="row">
                            <div class="col-3">
                                <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="max-height: 95px;"/>
                            </div>
                            <div class="col-9 text-end">
                                <h3 t-field="res_company.name"/>
                                <div><i class="fa fa-envelope me-1"/><span t-field="res_company.email" class="mb-0"/></div>
                                <div><i class="fa fa-phone me-1"/><span t-field="res_company.phone"/></div>
                            </div>
                        </div>
                    </div>

                    <div class="page">
                        <div class="text-center mb-4">
                            <h2><span style="color: #2d3d75;" t-field="doc.full_name"/></h2>
                            <h4 class="text-muted">Specialty: <span t-field="doc.speciality_id"/></h4>
                        </div>

                        <h3 style="margin-top: 35px;">Visits history</h3>
                        <div style="border: 1px solid black; border-radius: 15px; overflow: hidden; margin-top: 10px;">
                            <table class="table mb-0" style="border-collapse: collapse; width: 100%;">
                                <thead t-attf-style="background-color: #6283f0;">
                                    <tr>
                                        <th style="border: 1px solid black; color: white; font-weight: bold;">Visit date</th>
                                        <th style="border: 1px solid black; color: white; font-weight: bold;">Patient</th>
                                        <th style="border: 1px solid black; color: white; font-weight: bold;">Diagnosis</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.visits_ids.sorted(key=lambda v: v.planned_date, reverse=True)" t-as="visit">
                                        <tr>
                                            <td style="border: 1px solid black;"><span t-field="visit.planned_date"/></td>
                                            <td style="border: 1px solid black;"><span t-field="visit.patient_id.full_name"/></td>
                                            <td style="border: 1px solid black;">
                                                <div t-foreach="visit.diagnosis_ids" t-as="diag">
                                                    <i class="fa fa-stethoscope me-1"/>
                                                    <span t-field="diag.disease_id.name"/>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <h3 style="margin-top: 35px;">Patients status</h3>
                        <div style="border: 1px solid black; border-radius: 15px; overflow: hidden; margin-top: 10px;">
                            <table class="table mb-0" style="border-collapse: collapse; width: 100%;">
                                <thead t-attf-style="background-color: #6283f0;">
                                    <tr>
                                        <th style="border: 1px solid black; color: white; font-weight: bold;">Patient's Full name</th>
                                        <th style="border: 1px solid black; color: white; font-weight: bold;">Sex</th>
                                        <th style="border: 1px solid black; color: white; font-weight: bold;">Birth date</th>
                                        <th style="border: 1px solid black; color: white; font-weight: bold;">Phone number</th>
                                        <th style="border: 1px solid black;" t-attf-style="text-align: center; font-weight: bold; color: white;">Visit status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.patient_ids" t-as="patient">
                                        <tr>
                                            <td style="border: 1px solid black;"><span t-field="patient.display_name"/></td>
                                            <td style="border: 1px solid black;"><span t-field="patient.sex"/></td>
                                            <td style="border: 1px solid black;"><span t-field="patient.birth_date"/></td>
                                            <td style="border: 1px solid black;"><span t-field="patient.phone_number"/></td>

                                            <td class="text-center" t-attf-style="border: 1px solid black; background-color: #{
                                                '#ffffcc' if patient.last_visit_id.visit_status == 'planned' else
                                                '#ccffcc' if patient.last_visit_id.visit_status == 'done' else
                                                '#ffcccc' if patient.last_visit_id.visit_status == 'cancelled' else
                                                '#cccfff' if patient.last_visit_id.visit_status == 'missed' else '#ffffff'}">
                                                <span t-field="patient.last_visit_id.visit_status"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="footer o_standard_footer">
                        <div class="text-center" style="border-top: 1px solid black;">
                            <div class="row mt-2">
                                <div class="col-6 text-start">
                                    <i class="fa fa-map-marker me-1"/>

                                    <span t-field="res_company.city"/>
                                </div>
                                <div class="col-6 text-end">
                                    <i class="fa fa-clock-o me-1"/>

                                    <span t-out="context_timestamp(datetime.datetime.now()).strftime('%d.%m.%Y %H:%M')"/>
                                </div>
                            </div>

                            <div class="text-muted small mt-1">
                                Page: <span class="page"/> / <span class="topage"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>