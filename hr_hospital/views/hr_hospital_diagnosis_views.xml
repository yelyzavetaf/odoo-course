<odoo>

        <record id="hr_hospital_diagnosis_list" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.list ()</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <list string="Diagnoses">
                    <field name="visit_id"/>
                    <field name="disease_id"/>
                    <field name="description"/>
                    <field name="approved"/>
                    <field name="approved_by"/>
                    <field name="approved_date"/>
                    <field name="severity"/>
                    <field name="prescribed_treatment"/>
                </list>
            </field>
        </record>

        <record id="hr_hospital_diagnosis_form" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.form ()</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="visit_id"/>
                                <field name="disease_id"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="approved"/>
                                <field name="approved_by"/>
                                <field name="approved_date"/>
                                <field name="severity"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Prescribed treatment">
                                <field name="prescribed_treatment" placeholder="Describe treatment recommendations."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_hospital_diagnosis_window" model="ir.actions.act_window">
            <field name="name">Diagnoses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.diagnosis</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="hr_hospital_menu_diagnosis"
                  action="action_hr_hospital_diagnosis_window"
                  parent="hr_hospital_main_menu"
                  name="Diagnoses" sequence="30"/>

</odoo>