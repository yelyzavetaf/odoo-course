<odoo>

        <record id="hr_hospital_diagnosis_list" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.list ()</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <list string="Diagnoses">
                    <header>
                        <button name="%(action_disease_report_wizard)d"
                        string="Generate report"
                        display="always"
                        type="action" class="oe_highlight"/>
                    </header>
                    <field name="visit_id"/>
                    <field name="disease_id"/>
                    <field name="description"/>
                    <field name="approved"/>
                    <field name="approved_by" optional="hide"/>
                    <field name="approved_date" optional="hide"/>
                    <field name="severity"/>
                    <field name="prescribed_treatment" optional="hide"/>
                </list>
            </field>
        </record>

        <record id="hr_hospital_diagnosis_form" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.form ()</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="visit_id" string="Visit"/>
                                <h1>
                                    <field name="visit_id"/>
                                </h1>
                        </div>
                        <group>
                            <group string="Details">
                                <field name="disease_id"/>
                                <field name="description"/>
                                <field name="severity"/>
                            </group>
                            <group string="Approval">
                                <field name="approved"/>
                                <field name="approved_by"/>
                                <field name="approved_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Prescribed treatment">
                                <field name="prescribed_treatment" placeholder="Describe treatment recommendations."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_hospital_diagnosis_search" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.search</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Approved only" name="filter_approved_diagnoses" domain="[('approved_date', '!=', False)]"/>
                    <filter string="Diseases" name="group_by_disease" context="{'group_by': 'disease_id'}"/>
                </search>
            </field>
        </record>





        <record id="hr_hospital_diagnosis_pivot" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.pivot</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <pivot string="Diseases analytics" sample="1">
                    <field name="disease_id" type="row"/>
                    <field name="approved_date" interval="year" type="col"/>
                    <field name="approved_date" interval="month" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="hr_hospital_diagnosis_view_graph" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.graph</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <graph string="Disease analytics" type="bar" sample="1" stacked="True">
                    <field name="approved_date" interval="month"/>
                    <field name="disease_id"/>
                </graph>
            </field>
        </record>

        <record id="action_hr_hospital_diagnosis_window" model="ir.actions.act_window">
            <field name="name">Diagnoses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.diagnosis</field>
            <field name="view_mode">list,form,pivot,graph</field>
            <field name="context">{'search_default_filter_approved_diagnoses': 1}</field>
        </record>

        <menuitem id="hr_hospital_menu_diagnosis"
                  action="action_hr_hospital_diagnosis_window"
                  parent="hr_hospital_main_menu"
                  name="Diagnoses" sequence="30"/>

</odoo>