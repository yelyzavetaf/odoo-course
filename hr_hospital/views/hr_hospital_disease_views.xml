<odoo>

        <record id="hr_hospital_disease_list" model="ir.ui.view">
            <field name="name">hr.hospital.disease.list ()</field>
            <field name="model">hr.hospital.disease</field>
            <field name="arch" type="xml">
                <list string="Diseases">
                    <field name="name"/>
                    <field name="icd_10"/>
                    <field name="description"/>
                    <field name="danger_level"/>
                    <field name="is_contagious"/>
                    <field name="symptoms"/>
                    <field name="region_ids"/>
                    <field name="parent_id"/>
                    <field name="child_ids"/>
                </list>
            </field>
        </record>

        <record id="hr_hospital_disease_form" model="ir.ui.view">
            <field name="name">hr.hospital.disease.form ()</field>
            <field name="model">hr.hospital.disease</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="icd_10"/>
                                <field name="description"/>
                                <field name="symptoms"/>
                                <field name="region_ids"/>
                            </group>
                            <group>
                                <field name="danger_level"/>
                                <field name="is_contagious"/>
                                <field name="parent_id"/>
                                <field name="child_ids"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_hospital_disease_search" model="ir.ui.view">
            <field name="name">hr.hospital.disease.search</field>
            <field name="model">hr.hospital.disease</field>
            <field name="arch" type="xml">
                <search string="Search disease">
                    <field name="name"/>
                    <field name="icd_10"/>

                    <searchpanel>
                        <field name="parent_id"
                               string="Disease types"
                               enable_counters="1"
                               expand="1"
                               icon="fa-circle"/>

                        <field name="danger_level"
                               string="Severity"
                               select="multi"
                               icon="fa-plus"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="action_hr_hospital_disease_window" model="ir.actions.act_window">
            <field name="name">Diseases</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.disease</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="hr_hospital_menu_disease"
                  action="action_hr_hospital_disease_window"
                  parent="hr_hospital_main_menu"
                  name="Diseases" sequence="30"/>

</odoo>
