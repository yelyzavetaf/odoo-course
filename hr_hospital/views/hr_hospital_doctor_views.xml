<odoo>

        <record id="hr_hospital_doctor_list" model="ir.ui.view">
            <field name="name">hr.hospital.doctor.list ()</field>
            <field name="model">hr.hospital.doctor</field>
            <field name="arch" type="xml">
                <list string="Doctors">
                    <header>
                        <button name="%(action_doctor_schedule_wizard)d"
                            string="Add schedule"
                            display="always"
                            type="action" class="oe_highlight"/>

                        <button name="%(hr_hospital.action_diagnosis_report_wizard)d"
                                string="Diagnoses report"
                                type="action"
                                display="always"
                                class="btn-secondary"/>
                    </header>
                    <field name="full_name"/>
                    <field name="speciality_id"/>
                    <field name="licence_number"/>
                    <field name="is_intern"/>
                    <field name="experience"/>
                    <field name="rating" widget="float" options="{'digits': [3, 2]}"/>
                </list>
            </field>
        </record>

        <record id="hr_hospital_doctor_form" model="ir.ui.view">
            <field name="name">hr.hospital.doctor.form ()</field>
            <field name="model">hr.hospital.doctor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="first_name" string="Full name"/>
                                <h1 class="d-flex gap-2">
                                    <field name="last_name" placeholder="Last name"/>
                                    <field name="first_name" placeholder="First name"/>
                                    <field name="middle_name" placeholder="Middle name"/>
                                </h1>
                        </div>
                        <group>
                            <group string="Personal information">
                                <field name="email"/>
                                <field name="phone_number"/>
                                <field name="birth_date"/>
                                <field name="sex"/>
                                <field name="country_id"/>
                                <field name="language_id"/>
                            </group>
                            <group string="Professional information">
                                <field name="speciality_id"/>
                                <field name="licence_number"/>
                                <field name="licence_issued_date"/>
                                <field name="experience"/>
                                <field name="education_country_id"/>
                                <field name="rating" widget="float" options="{'digits': [3, 2]}"/>
                                <separator string="Mentorship"/>
                                    <field name="is_intern"/>
                                    <field name="mentor_id" invisible="not is_intern"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Patients" name="patients">
                                <field name="patient_ids"/>
                            </page>
                            <page string="Schedule" name="schedule">
                                <field name="work_schedule_ids"/>
                            </page>
                            <page string="Interns" name="interns" invisible="is_intern">
                                <field name="intern_ids" mode="kanban" readonly="1">
                                    <kanban>
                                        <field name="full_name"/>
                                        <field name="education_country_id"/>
                                        <field name="licence_issued_date"/>

                                        <templates>
                                            <t t-name="card" class="bg-info text-white">
                                                <div class="oe_kanban_global_click">
                                                    <div class="oe_kanban_details">
                                                        <strong class="o_kanban_record_title">
                                                            <field name="full_name"/>
                                                        </strong>
                                                        <div>
                                                            <field name="education_country_id"/>
                                                        </div>
                                                        <div class="o_kanban_record_subtitle mt-2">
                                                            <span>Intern License issued:</span>
                                                        </div>
                                                        <field name="licence_issued_date"/>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_hospital_doctor_search" model="ir.ui.view">
            <field name="name">hr.hospital.doctor.search (hr_hospital_doctor)</field>
            <field name="model">hr.hospital.doctor</field>
            <field name="arch" type="xml">
                <search string="Search doctor">
                    <filter string="Mentors" name="doctor_filter_mentor" domain="[('intern_ids', '!=', False)]"/>
                    <filter string="Interns" name="doctor_filter_intern" domain="[('is_intern', '=', True)]"/>
                </search>
            </field>
        </record>

        <record id="hr_hospital_doctor_view_kanban" model="ir.ui.view">
            <field name="name">hr.hospital.doctor.kanban (hr_hospital_doctor)</field>
            <field name="model">hr.hospital.doctor</field>
            <field name="arch" type="xml">

                <kanban class="o_kanban_mobile" default_group_by="speciality_id" quick_create="False" archivable="False">
                    <field name="full_name"/>
                    <field name="speciality_id"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="full_name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="speciality_id"/>
                                    </div>

                                    <div class="o_kanban_record_bottom mt-2">
                                        <div class="oe_kanban_bottom_right">
                                            <button name="action_create_visit_from_kanban"
                                                    type="object"
                                                    class="btn btn-primary btn-sm">
                                                Add visit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_hr_hospital_doctor_window" model="ir.actions.act_window">
            <field name="name">Doctors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.doctor</field>
            <field name="view_mode">list,form,kanban</field>
        </record>


        <menuitem id="hr_hospital_menu_doctor"
                  action="action_hr_hospital_doctor_window"
                  parent="hr_hospital_menu_catalog"
                  name="Doctors" sequence="300"/>

</odoo>
