<odoo>
    <record id="view_patient_card_export_wizard_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.card.export.wizard.form</field>
        <field name="model">hr.hospital.patient.card.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export medical card">
                <group>
                    <group>
                        <field name="patient_id" options="{'no_create': True}"/>
                        <field name="lang_id" options="{'no_create': True}"/>
                        <field name="export_format" widget="radio"/>
                    </group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="include_diagnoses"/>
                        <field name="include_recommendations"/>
                    </group>
                </group>
                <footer>
                    <button name="action_export" string="Export" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_patient_card_export_wizard" model="ir.actions.act_window">
        <field name="name">Export card</field>
        <field name="res_model">hr.hospital.patient.card.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_hospital.model_hr_hospital_patient"/>
    </record>
</odoo>